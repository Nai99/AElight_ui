  /////////////

  "about_title": {
    "type": "label",
    "text_alignment": "left",
    "font_scale_factor": 1.5,
    "size": [ "default", "default" ],
    "text": "$title_text",
    "$color_t|default": "$about_title_color",
    "font_type": "smooth",
    "color": "$color_t"
  },
  
  "label_c": {
    "type": "label",
    "size": [ "100%", "default" ],
    "text": "$body_text",
    "$color_c|default": "$box_text_color",
    "font_type": "smooth",
    "color": "$color_c"
  },
  
  "line": {
    "type": "image",
    "nineslice_size": 1,
    "texture": "extra_textures/ui/light_blue_bar"
  },
  
  "logo": {
    "type": "image",
    "anchor_from": "top_middle",
    "anchor_to": "top_middle",
    "size": [ "default", 53 ],
    "texture": "extra_textures/ui/logo"
  },
  
  ///////////
  //内容介绍//
  //////////
          
  "description_panel": {
    "type": "stack_panel",
    "size": [ "100%", 210 ],
    "orientation": "vertical",
    "controls": [
      {
        "logo@logo": {}
      },
      {
        "title@about_title": {
          "$title_text": "关于材质"
        }
      },
      {
        "t1@label_c": {
          "$body_text": "Minimal UI(MUI)，一款仿Win10扁平化风格的UI资源包，目前支持MCBE1.14+"
        }
      },
      {
        "t2@label_c": {
          "$body_text": "作者：YC_Lemon_NinG(redstoner_1075)，因学业关系，资源包会不定期更新，无材质包交流群\n未经允许不得二次修改发布，不得用于商业行为。\n如有疑问或建议可私聊\nB站uid：§l96640878\nCopyright © 2020-2021 YC_Lemon_NinG\nDate:2021/11/25"
        }
      },
      {
        "square1": {
          "type": "panel",
          "size": [ 4, 4 ]
        }
      },
      {
        "t3@label_c": {
          "$body_text": "§o[其它资源]：\n§r§l ⒈ocd材质包(链接详见B站@梵蒂冈_273的视频简介)\n ⒉1.16更新(详见Minecraft官网)\n ⒊基岩版红石交流群：792687267"
        }
      },
      {
        "square0": {
          "type": "panel",
          "size": [ 2, 2 ]
        }
      },
      {
        "line_panel": {
          "type": "panel",
          "size": [ "100%", 1 ],
          "controls": [
            {
              "line@line": {
