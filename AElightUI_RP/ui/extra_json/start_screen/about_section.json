              }
            }
          ]
        }
      }
    ]
  },
  
  ///////////
  //更新日志//
  //////////
  
  "date_panel": {
    "type": "stack_panel",
    "size": [ "100%", 20 ],
    "orientation": "horizontal",
    "controls": [
      { 
        "date_small": {
          "font_scale_factor": 1.8,
          "color": "$about_title_color",
          "type": "label",
          "size": [ "default", "default" ],
          "text": "$month"
         }
      },
      {
        "date_small": {
          "type": "panel",
          "size": [ "fill", 20 ],
          "controls": [
            { 
              "date": {
                "type": "label",
                "size": [ "100%", 10 ],
                "text_alignment": "left",
                "anchor_from": "bottom",
                "anchor_to": "bottom",
                "color": "$about_title_color",
                "font_type": "smooth",
                "text": "$day"
              }
            }
          ]
        }
      }
    ]
  },
  
  "update_log": {
    "type": "stack_panel",
    "size": [ "100%", "100%c" ],
    "orientation": "vertical",
    "controls": [
      {
        "square0": {
          "type": "panel",
          "size": [ 2, 2 ]
        }
      },
      { 
        "u_t@about_title": {
          "$title_text": "近期更新"
        }
      },
      {
        "square1": {
          "type": "panel",
          "size": [ 2, 2 ]
        }
      },
      {
        "date_3@date_panel": {
          "$month": "§oxx",
          "$day": "/xx"
        }
      },
      {
        "u3@label_c": {
          "$body_text": "§lv0.02.01bate:§r\n再次修改了阴影框\n新的存档选择界面"
        }
      },
      {
        "square3": {
          "type": "panel",
          "size": [ 2, 2 ]
        }
      },
      {
        "date_1@date_panel": {
          "$month": "§o11",
          "$day": "/25"
        }
      },
      {
        "u1@label_c": {
          "$body_text": "§lv0.01.01bate:§r\n删除了背景\n修复了进出入动画\n修复了panel消失的bug\n更改了阴影框\n增加了关于界面(更新日志)和一些没用的东西"
        }
      },
      {
        "square2": {
          "type": "panel",
          "size": [ 2, 2 ]
        }
      },
      {
        "date_2@date_panel": {
          "$month": "§o10",
          "$day": "/30"
        }
      },
      {
        "u2@label_c": {
          "$body_text": "§lv0.01.00bate内测:§r\n第一个版本，更新了歪比巴卜"
        }
      }/*,
      {
        "a@text_panel": {
          "size": [ 70, 20 ]
        }
      }*/
    ]
  },
        
  "section_panel": {
    "type": "stack_panel",
    "size": [ "100%", "100%c" ],
    "orientation": "vertical",
    "controls": [
      {
        "description_panel@mui_about_section.description_panel": {
        }
      },
      {
        "update_log@mui_about_section.update_log": {
        }
      }
    ]
  },
  
  "main_panel": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "controls": [
      { "bg@bg": {}},
      { "section_scroll@section_scroll": {}
      }
    ]
  },
  
  "bg": {
    "type": "image",
    "alpha": 0.7,
    "texture": "extra_textures/ui/option_0",
    "size": [ "100%", "100%" ],
    "nineslice_size": 1
  },
  
  "section_scroll@ui_mui_common.scrolling_panel": {
    "size": [ "100%", "100%" ],
    "$show_background": false,
    "$scroll_track_size": [ 5, "100% - 4px" ],
    "$scroll_track_offset|default": [ -4, 2 ],
    "$scrolling_content": "mui_about_section.section_panel"
  },

  "About_toggle@ui_mui_common.mui_toggle_button_control": {
    "$toggle_name": "about_toggle",
    "$toggle_state_binding_name": "#about_toggle"
  },
  
  "logo_button@ui_mui_common.mui_toggle_button": {
    "$option_binding_name": "about_toggle",
    "$toggle_default": "extra_textures/ui/logo_d",
    "$toggle_pressed": "extra_textures/ui/logo_p_h",
    "$layout_size": [ "100% - 2px", "100% - 2px" ],
    "$control_name": "mui_about_section.About_toggle"
  },
  
  "about_section_panel": {
    "type": "panel",
    "size": [ "100%", "100%" ],
    "anchor_from": "center",
    "anchor_to": "center",
    "bindings": [
      {
        "binding_type": "view",
        "source_control_name": "mui_about_section.About_toggle",
        "source_property_name": "#toggle_state",
        "target_property_name": "#visible"
      }
    ],
    "controls": [
      {
        "panel_box@ui_mui_common.panel_box": {
          "$box_background_texture": "$about_bg",
          "$bar_title_icon": "extra_textures/ui/about_button_0",
          "size": [ 256, 168 ],
          "$background_alpha": 0.7,
          "$show_exit_button": false,
          "$title_color": "black",
          "$bar_title": "关于",
          "$panel_content": "mui_about_section.main_panel",
          "layer": 5
        }
      },
      {
        "blank": {
          "type": "input_panel",
          "size": [ "100% - 24px", "100%" ],
          "anchor_from": "right_middle",
          "anchor_to": "right_middle",
          "consume_hover_events": true,
          "layer": 1
        }
      }
    ]
  }
  
}